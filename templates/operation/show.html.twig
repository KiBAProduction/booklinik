{% extends 'base.html.twig' %}

{% block title %}Opération{% endblock %}

{% block body %}
    <h1>Opération</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ operation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ operation.name }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ operation.img }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ operation.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('operation_index') }}" class="btn back-btn">Retour</a>

    <a href="{{ path('operation_edit', {'id': operation.id}) }}" class="btn edit-btn">Modifier</a>

    {{ include('operation/_delete_form.html.twig') }}
{% endblock %}
