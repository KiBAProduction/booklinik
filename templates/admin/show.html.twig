{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <h1>Admin</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ admin.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ admin.email }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>
                    {% for role in admin.roles %}
                        {% if role == "ROLE_ADMIN" %}
                            - Administrateur<br>
                        {% elseif role == "ROLE_USER" %}
                            - Utilisateur<br>
                        {% else %}
                            - {{ role }}<br>
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>
                    <span>Les mots de passes sont encryptés, la valeur affichée est présente afin de s'assurer que celui ci a bien été encrypté</span>
                    {{ admin.password }}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_index') }}" class="back-btn btn">Retour</a>

    <a href="{{ path('admin_edit', {'id': admin.id}) }}" class="edit-btn btn">Modifier</a>

    {{ include('admin/_delete_form.html.twig') }}
{% endblock %}
